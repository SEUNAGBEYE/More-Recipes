{
  "name": "server",
  "version": "1.0.0",
  "description": "These is the server side of the more-recipe application",
  "main": "index.js",
  "scripts": {
    "test": "set NODE_ENV=test&& nyc mocha ./server/test/test.js --compilers js:babel-core/register --exit",
    "babel-node": "babel-node ./server/src/index.js --presets=env",
    "start": "nodemon --exec npm run babel-node -- ./server/src/index.js",
    "startProduction": "npm run babel-node -- ./server/src/index.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc npm test&& nyc report --reporter=text-lcov | coveralls",
    "build": "./node_modules/.bin/babel server/src/index.js -d build",
    "dist": "./node_modules/.bin/babel server/src/index.js -d dist --presets=babili"
  },
  "author": "Seun Agbeye",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.1.0",
    "pg": "^7.3.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.19.0",
    "sqlite3": "^3.1.13",
    "validator": "^9.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "coveralls": "^3.0.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "mocha": "^4.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "node-mocks-http": "^1.6.6",
    "nodemon": "^1.12.1",
    "nyc": "^11.2.1",
    "request": "^2.83.0",
    "sequelize-cli": "^3.0.0",
    "validatorjs": "^3.13.5"
  }
